<UserControl x:Class="Bannerlord.UIEditor.MainFrame.FloatingPanelParentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resizer="clr-namespace:Bannerlord.UIEditor.MainFrame.Resizer"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="200">
    <resizer:ResizableControl x:Name="ResizeableControl"
                              HorizontalContentAlignment="Stretch"
                              VerticalContentAlignment="Stretch">
        <DockPanel x:Name="ContentStackPanel"
                   DragEnter="ContentStackPanel_OnDragOver"
                   DragOver="ContentStackPanel_OnDragOver"
                   DragLeave="ContentStackPanel_OnDragLeave"
                   Drop="ContentStackPanel_OnDrop"
                   AllowDrop="True"
                   LastChildFill="True" />
    </resizer:ResizableControl>
</UserControl>